- model_class = Bussiness
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize.titleize
.search-box
  = render 'search_form'
%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Locality
      %th Tel
  %tbody
    - @results.each do |result|
      %tr
        %td= result['name']
        %td= result['locality']
        %td= result['tel']
