= form_tag search_path, method: :get, :html => { :class => 'form-horizontal' } do
  .form-actions
    = text_field_tag :query, params[:query], placeholder: "Search keyword", class: "form-control"
    = text_field_tag :place, params[:place], placeholder: "Where is it", class: "form-control"
    = submit_tag 'Go', :class => 'btn btn-primary'
